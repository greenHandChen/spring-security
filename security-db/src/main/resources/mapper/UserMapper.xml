<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mapper.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ceh.spring.securitydb.mapper.UserMapper">

    <resultMap id="userMap" type="com.ceh.spring.securitydb.domain.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>

    <select id="getUserByUserNameAndPassword" parameterType="com.ceh.spring.securitydb.dto.UserDTO" resultMap="userMap">
        select u.id,u.username,u.password from user u
        where u.username = #{username}
    </select>

    <!-- mybatis插入数据后返回记录的主键ID -->
    <insert id="registryUser"  parameterType="com.ceh.spring.securitydb.dto.UserDTO">
        INSERT  INTO USER(username,password) VALUES (#{username},#{password})
    </insert>
</mapper>